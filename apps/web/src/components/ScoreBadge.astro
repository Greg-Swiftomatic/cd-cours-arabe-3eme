---
interface Props {
  score: number | null;
}

const { score } = Astro.props as Props;
const tier =
  typeof score === "number"
    ? score >= 80
      ? "success"
      : score >= 50
        ? "warning"
        : "danger"
    : "neutral";
const colors: Record<string, string> = {
  success: "bg-emerald-100 text-emerald-700",
  warning: "bg-amber-100 text-amber-700",
  danger: "bg-rose-100 text-rose-700",
  neutral: "bg-slate-200 text-slate-600",
};
---

<span class={`inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold ${colors[tier]}`}>
  {typeof score === "number" ? `${score}/100` : "N/A"}
</span>
